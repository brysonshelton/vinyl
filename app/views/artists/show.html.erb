<h1 class="font-bold text-4xl text-center mb-8"><%= @artist.name %></h1>
<div class="text-center">
  <ul>
    <% @albums.each do |album| %>
      <li class="text-fuchsia-500"><%= album.title %></li>
      <% if album.cover_image_url.present? %>
        <div class="flex justify-center mt-2 mb-4">
          <%= image_tag album.cover_image_url, alt: "Cover Image for #{album.title}", class: "mx-auto w-[300px] h-[300px] object-cover" %>
        </div>
      <% else %>
        <p>No cover image available</p>
      <% end %>
    <% end %>
  </ul>
  <div class="mt-4"><%= link_to 'To Artists', artists_path, class: "text-blue-500 hover:underline" %></div>
  <div><%= link_to 'To Albums', albums_path, class: "text-blue-500 hover:underline" %></div>
</div>