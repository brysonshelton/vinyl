<h1 class="font-bold text-4xl text-center mb-8">Albums</h1>
<div class="text-center">
  <ul>
    <% @albums.each do |album| %>
      <li>
        <!-- <%= album.title %> -->
        <%= link_to album.title, artist_path(album.artist_id), class: "text-blue-500 hover:underline" %>
      </li>
    <% end %>
  </ul>
</div>